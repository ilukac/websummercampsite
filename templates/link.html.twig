{% set root_location_path = path("homepage") %}

{% if content is defined %}
{% if content.remoteEntry.has("canonical") and content.remoteEntry.canonical is not empty %}
    <link rel="canonical" href="{{ content.remoteEntry.canonical }}" />
{% endif %}
{% endif %}

    <link rel="home" href="{{ root_location_path }}" title="Web Summer Camp" />
    <link rel="index" href="{{ root_location_path }}" />

    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/favicons/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('images/favicons/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('images/favicons/favicon-16x16.png') }}">
    <link rel="manifest" href="{{ asset('images/favicons/site.webmanifest') }}">
    <link rel="mask-icon" href="{{ asset('images/favicons/safari-pinned-tab.svg') }}" color="#084887">
    <meta name="msapplication-TileColor" content="#2b5797">
    <meta name="theme-color" content="#f8d84b">

    <link rel="icon shortcut" type="image/x-icon" href="{{ asset('images/favicon.png') }}" />
